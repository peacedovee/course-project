<Window x:Class="VIO.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VIO"
        mc:Ignorable="d"
        Title="VIO" Height="450" Width="800" Icon="pictures\iconVIO.ico" Background="#EEE2DC">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Height="410" Width="780">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="437"/>
            <ColumnDefinition Width="Auto" MinWidth="323"/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Height="304" Margin="230,0,0,0" VerticalAlignment="Top" Width="310" 
               Source="pictures/VIOlogo.png" Grid.ColumnSpan="2"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="23" Margin="67,309,0,0" VerticalAlignment="Top" 
                     Width="640" Grid.ColumnSpan="2" Foreground="#AC3B61"/>
        <TextBlock x:Name="progressText" HorizontalAlignment="Left" Margin="381,352,0,0" VerticalAlignment="Top" 
                   Width="50" Text="0%" FontFamily="Cooper Black" FontSize="17" Foreground="#123C69" Height="20"/>
    </Grid>
</Window>
